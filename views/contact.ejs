<html lang="en" dir="ltr">

<head>
    <%- include('templates/head') %>
    <link rel="stylesheet" href="/css/contact.css">
    <script type="text/javascript">
        $('#send').on('click', function() {
            $('#bq').removeClassList('hidden', function() {
                setTimeOut(2000, function() {
                    $('#bq').addClass('hidden');
                });
            });
        });
    </script>
</head>

<body>
    <%- include('templates/nav') %>
    <div class="ovr">
        <div class="container-fluid mb-3 py-2" style="opacity:0.9">
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card pb-5">
                        <div class="card-body">
                            <div class="container">
                                <section class="section">
                                    <h2 class="font-weight-bold text-center h1 my-5">Contact us</h2>
                                    <p class="text-center grey-text mb-5 mx-auto w-responsive">For any inquie or problem you are face you can type it out below or contact us on the given number at right hand side. </p>
                                    <div class="row pt-5">
                                        <div class="col-md-8 col-xl-9">
                                            <form method="get">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="md-form">
                                                            <input type="text" id="contact-name" class="form-control">
                                                            <label for="contact-name" class="">Your name</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="md-form">
                                                            <input type="email" id="contact-email" class="form-control">
                                                            <label for="contact-email" class="">Your email</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="md-form">
                                                            <input type="text" id="contact-Subject" class="form-control">
                                                            <label for="contact-Subject" class="">Subject</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="md-form">
                                                            <textarea type="text" id="contact-message" class="md-textarea form-control" rows="5"></textarea>
                                                            <label for="contact-message">Your message</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="text-center text-md-left my-4">
                                                    <button type="submit" class="btn peach-gradient" id="send">Send</button>
                                                    <blockquote class="blockquote peach-gradient hidden" id="bq">
                                                        <p class="bq-title">Your response has been recorded</p>

                                                    </blockquote>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                    <div class="col-md-4 col-xl-3">
                                        <ul class="contact-icons text-center list-unstyled">
                                            <li>
                                                <i class="fas fa-map-marker fa-2x orange-text"></i>
                                                <p>New Delhi, Delhi, India</p>
                                                <p>Ghaziabad,UP, India</p>
                                                <!---   <p>Haldwani,Uttrakhand, India</p>   --->
                                                <p>Bhubneshwar,Orissa, India</p>

                                            </li><br><br>
                                            <li>
                                                <i class="fas fa-phone fa-2x orange-text"></i>
                                                <p>+91 7838690429</p>
                                            </li><br><br>
                                            <li>
                                                <i class="fas fa-envelope fa-2x orange-text"></i>
                                                <p>conquerthehimalayas@gmail.com</p>
                                            </li>
                                        </ul>
                                    </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                            </div>

    <%- include('templates/foot') %>
</body>

</html>